upstream dneslov_app2 {
   server unix:/var/www/dneslov/shared/tmp/sockets/puma.sock fail_timeout=0;
}

server {
   listen 80;

   server_name _dneslov.org;

   return 301 https://$host$request_uri;
}

server {
   listen 443 ssl;

   root /var/www/dneslov/current/public;

   server_name dneslov.org;

   keepalive_timeout   60;
   client_max_body_size 4G;

   ssl on;
   # ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
   ssl_protocols TLSv1.2;
   ssl_ciphers HIGH:!aNULL:!MD5:!3DES;
   ssl_certificate_key  /etc/nginx/ssl/dneslov.key;
   ssl_certificate      /etc/nginx/ssl/dneslov.crt;
   # add_header Strict-Transport-Security 'max-age=604800';   

   try_files $uri/index.html $uri @dneslov_app2;
   location @dneslov_app2 {
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $http_host;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header X-Forwarded-Ssl on;
      proxy_read_timeout 30;
      proxy_redirect off;
      proxy_pass http://dneslov_app2;
   }

   error_page 500 502 503 504 /500.html;
   location = /500.html {
      root /var/www/dneslov/current/public;
   }

   location ~ ^/(assets)/ {
      gzip_static on;

      add_header Cache-Control public;
      expires 4w;
      gzip on;
      gzip_vary on;
      gzip_proxied any;
      gzip_disable "MSIE [1-6]\.";
      gzip_comp_level 6;
      gzip_types application/x-javascript text/css image/x-icon image/png image/jpeg image/gif;
   }
}
